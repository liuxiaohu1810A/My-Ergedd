<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_recently_hot_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/gray_f7"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="最近搜索"
        android:textColor="@color/gray_ae"
        android:textSize="@dimen/dp_13" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:background="@color/white"
           >
            <!--android:visibility="gone"-->

            <TextView
                android:id="@+id/search_recently_no_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_40"
                android:text="暂时没有你要找的这首歌哦(´-ω-`)"
                android:textColor="@color/phone_tab_title_color"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/search_try_recently_other_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_recently_no_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_2"
                android:text="试试别的关键词吧(^～^)"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dp_13" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_try_recently_other_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_2"
                android:text="或者使用下面的热搜词汇"
                android:textColor="@color/text_color"
                android:textSize="@dimen/dp_13" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/item_remonment_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/item_remonment_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
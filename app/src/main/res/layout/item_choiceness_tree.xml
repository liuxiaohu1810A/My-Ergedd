<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/icon"
            android:gravity="center"
            android:text="精选专辑"
            android:textColor="#3f3f3f"
            android:textSize="@dimen/dp_10" />

        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="22dp"
            android:gravity="center"
            android:text="更多"
            android:textColor="@color/main_color"
            android:textSize="@dimen/dp_10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@mipmap/icon_enter_green"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="120dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/item_chosen_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:padding="4dp"
                    android:src="@mipmap/icon_notification"
                    app:riv_corner_radius="@dimen/dp_3" />

                <TextView
                    android:id="@+id/item_chosen_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/item_chosen_img"
                    android:background="@mipmap/bg_small_grey_label"
                    android:drawableLeft="@mipmap/icon_music_white"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:text="99"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    android:textSize="11sp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/item_chosen_type"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="5dp"
                android:text="流行歌曲"
                android:textSize="13dp"
                android:layout_below="@id/item_chosen_img"/>
        </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_chosen_img_er"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="4dp"
                android:src="@mipmap/icon_notification"
                app:riv_corner_radius="@dimen/dp_3" />

            <TextView
                android:id="@+id/item_chosen_count_er"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_chosen_img_er"
                android:background="@mipmap/bg_small_grey_label"
                android:drawableLeft="@mipmap/icon_music_white"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="99"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:textSize="11sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/item_chosen_type_er"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:text="流行歌曲"
            android:textSize="13dp"
            android:layout_below="@id/item_chosen_img_er"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/item_chosen_img_san"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:padding="4dp"
                android:src="@mipmap/icon_notification"
                app:riv_corner_radius="@dimen/dp_3" />

            <TextView
                android:id="@+id/item_chosen_count_san"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/item_chosen_img_san"
                android:background="@mipmap/bg_small_grey_label"
                android:drawableLeft="@mipmap/icon_music_white"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="99"
                android:layout_marginLeft="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:textColor="@color/white"
                android:layout_alignParentBottom="true"
                android:textSize="11sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/item_chosen_type_san"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="5dp"
            android:text="流行歌曲"
            android:textSize="13dp"
            android:layout_below="@id/item_chosen_img_san"/>
    </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginTop="12dp"
        android:background="@color/divider" />
</LinearLayout>
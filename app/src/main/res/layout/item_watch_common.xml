<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110">

    <ImageView
        android:id="@+id/cartoon_img"
        android:layout_width="@dimen/dp_162"
        android:layout_height="@dimen/dp_90"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_6"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_notification" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toEndOf="@+id/cartoon_img"
        android:layout_toRightOf="@+id/cartoon_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_watch_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="专辑名称"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/item_watch_list_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="专辑描述"
            android:textColor="#999999"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/cartoom_ji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="true"
            android:text="共N集"
            android:textColor="#cccccc"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/cartoon_img"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="#eaeaea" />
</RelativeLayout>
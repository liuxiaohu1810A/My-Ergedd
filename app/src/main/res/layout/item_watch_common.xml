<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/cartoon_img"
        android:layout_width="162dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/dp_6"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_notification" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/cartoon_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_watch_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="专辑名称"
            android:textColor="#333333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_watch_list_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="专辑描述"
            android:textColor="#999999"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/cartoom_ji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="true"
            android:text="共N集"
            android:textColor="#cccccc"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/views"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/cartoon_img"
        android:layout_marginTop="@dimen/dp_6"
        android:background="#eaeaea" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp"
    app:cardMaxElevation="1dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">

        <ImageView
            android:id="@+id/watch_top_pig"
            android:layout_width="@dimen/dp_250"
            android:layout_height="@dimen/dp_150"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_notification" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_150"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toEndOf="@+id/watch_top_pig"
            android:layout_toRightOf="@+id/watch_top_pig"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/watch_top_chicken"
                android:layout_width="@dimen/dp_142"
                android:layout_height="@dimen/dp_75"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_notification" />

            <ImageView
                android:id="@+id/watch_top_dog"
                android:layout_width="@dimen/dp_142"
                android:layout_height="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_notification" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
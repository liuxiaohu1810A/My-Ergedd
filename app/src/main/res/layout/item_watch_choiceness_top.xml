<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">

        <ImageView
            android:id="@+id/watch_top_pig"
            android:layout_width="230dp"
            android:layout_height="120dp"
            android:background="@color/red"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_notification" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_120"
            android:layout_alignParentTop="true"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_toEndOf="@+id/watch_top_pig"
            android:layout_toRightOf="@+id/watch_top_pig"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/watch_top_chicken"
                android:layout_width="@dimen/dp_142"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@color/red"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_notification" />

            <ImageView
                android:id="@+id/watch_top_dog"

                android:background="@color/red"
                android:layout_width="@dimen/dp_142"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_notification" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
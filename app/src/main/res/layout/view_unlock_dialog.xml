<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="360dp"
        android:layout_height="640dp">

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@mipmap/unlock_dialog_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:text="请确认您是家长"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />

                    <RelativeLayout
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp">


                        <LinearLayout
                            android:id="@+id/unlock_question_container"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/unlock_question"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 x 7 = "
                                android:textColor="@color/white"
                                android:textSize="28dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="42dp"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/unlock_question"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/unlock_input"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:padding="0dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="@color/white"
                                    android:textSize="28dp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_below="@+id/unlock_input"
                                    android:background="@color/white" />
                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/tip_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="26dp"
                        android:layout_marginRight="26dp"
                        android:background="@drawable/bg_tip_round">

                        <TextView
                            android:id="@+id/tip_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@mipmap/unlock_dialog_icon_warning"
                            android:drawablePadding="4dp"
                            android:paddingBottom="8dp"
                            android:paddingEnd="8dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="8dp"
                            android:text="非 WiFi 播放将产生流量费用！"
                            android:textColor="#e98400"
                            android:textSize="@dimen/font_small" />
                    </RelativeLayout>


                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/btn_bg_1"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="1"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btn_bg_2"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="2"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btn_bg_3"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="3"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/btn_bg_4"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="4"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/btn_bg_5"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="5"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>


                        </LinearLayout>


                        <LinearLayout

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:id="@+id/btn_bg_6"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="6"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btn_bg_7"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="7"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/btn_bg_8"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="8"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/btn_bg_9"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_9"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="9"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:id="@+id/btn_bg_0"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/selector_unlock_btn">

                                <TextView
                                    android:id="@+id/btn_0"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="0"
                                    android:textColor="@color/main_color"
                                    android:textSize="17sp" />

                            </RelativeLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/btn_unlock_close" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>